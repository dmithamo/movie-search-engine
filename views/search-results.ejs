<% include partials/header %>

<header>
    <div class="home-box">
        <a href="/">Home</a>
    </div>

    <div class="form-box">
        <form action="/searchdb" method="GET">
            <input type="text" placeholder="search for" name="search">
            <button>Search</button>
        </form>
    </div>

    <div class="end-box">
        <a href="#">Useless link</a>
    </div>
</header>

<section>
    <h2>  Your search results for: <%= searchTerm %>  </h2>
   
    <% if(movies){ %>
        <ol>
            <% movies.forEach(function(movie){ %>
            <li>
                <div>
                <% if(movie['Poster'] !== "N/A") { %>
                    <img src=" <%= movie['Poster'] %> " alt="image">
                    <% }else{ %>
                        <img src="http://i.ebayimg.com/images/i/190349612320-0-1/s-l1000.jpg" alt="Image Missing">
                    <% } %>
                    
                </div>
                <div>
                    <p class="headline"> <%= movie["Title"] %> </p> 
                </div>
            </li> 
            <% }) %>
        </ol>
        
    <% }else{ %>
            <p class="headline">Nuthin found...</p>
    <% } %>
</section>

<footer>
    <% include partials/footer %>
</footer>

