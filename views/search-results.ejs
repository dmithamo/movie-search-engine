<% include partials/header %>

<header>
    <div class="home-box">
        <a href="/"><i class="fa fa-home" aria-hidden="true"></i></a>
    </div>

    <div class="the-form">
        <form class="form-box" action="/searchdb" method="GET">
            <input type="text" placeholder="Which movie are you looking to find?" name="search">
            <button> <i class="fa fa-search" aria-hidden="true"></i>   </button>
        </form>
    </div>

    <div class="end-box">
        <a href="#"> <i class="fa fa-user" aria-hidden="true"></i> </a>
        <a href="#"> <i class="fa fa-user-plus" aria-hidden="true"></i> </a>
    </div>
</header>

<section>
    <h2>  You searched for : <%= searchTerm %>  </h2>
   
    <% if(movies){ %>
        <ol>
            <% movies.forEach(function(movie){ %>
            <li>
                <div>
                <% if(movie['Poster'] !== "N/A") { %>
                    <img src=" <%= movie['Poster'] %> " alt="image">
                    <% }else{ %>
                        <img src="http://i.ebayimg.com/images/i/190349612320-0-1/s-l1000.jpg" alt="Image Missing">
                    <% } %>
                    
                </div>
                <div>
                    <p class="headline"> <%= movie["Title"] %> </p> 
                    <p class="more"> Year:  <%= movie["Year"] %> </p> 
                </div>
            </li> 
            <% }) %>
        </ol>
        
    <% }else{ %>
            <h3>We found nuthin ... nuthin aTall :( <br> <a href="/">Try again?</a> </h3>
    <% } %>
</section>

<% include partials/footer %>


